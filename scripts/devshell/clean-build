### remove the out directory, then set and build

## See `fx set` for usage.

set -e

source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"/lib/vars.sh

rm -rf -- "${FUCHSIA_DIR}/out"
fx-command-run set "$@"
fx-command-run full-build
